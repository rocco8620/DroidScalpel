<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="?themeColor" />
                    <corners android:radius="@dimen/GMA_lite.Button_corner_radius" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/GMA_Lite.second_text_brand" />
                    <corners android:radius="@dimen/GMA_lite.Button_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>