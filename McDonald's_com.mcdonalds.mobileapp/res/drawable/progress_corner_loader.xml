<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <bitmap android:gravity="center" android:src="@drawable/loader_background" />
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="0.0" android:toDegrees="1440.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <bitmap android:gravity="center" android:src="@drawable/loader" />
        </rotate>
    </item>
</layer-list>