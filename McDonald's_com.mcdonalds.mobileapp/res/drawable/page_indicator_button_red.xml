<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/GMA_Lite.primal.red.dark" />
            <size android:height="@dimen/GMA_lite.PageIndicator_button_size" android:width="@dimen/GMA_lite.PageIndicator_button_size" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/GMA_Lite.background" />
            <size android:height="@dimen/GMA_lite.PageIndicator_button_size" android:width="@dimen/GMA_lite.PageIndicator_button_size" />
        </shape>
    </item>
</selector>